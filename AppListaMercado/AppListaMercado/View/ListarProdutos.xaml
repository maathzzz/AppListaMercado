<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppListaMercado.View.ListarProdutos"
             Title="Lista do Mercado">



    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="Somar" Text="Somar" Clicked="Somar_Clicked"/>
        <ToolbarItem x:Name="Novo" Text="Nova compra" Clicked="Novo_Clicked"/>

    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>

               
                    
                <SearchBar x:Name="procurar_txt"
                           Placeholder="Digite seu Produto..."
                           TextChanged="procurar_txt_TextChanged"/>
                
                <!-- <RefreshView x:Name="ref_carregando" IsRefreshing="true">
                    <ListView x:Name="lst_produtos"

                </RefreshView> -->

                
                
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>